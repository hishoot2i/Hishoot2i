<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppWidget.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:theme">@style/ThemeOverlay.App.ActionBar</item>
        <item name="elevation">@dimen/toolbarElevation</item>
    </style>

    <style name="AppWidget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppWidget.DrawerLayoutStyle" parent="">
        <item name="elevation">@dimen/drawerLayoutElevation</item>
    </style>

    <style name="AppWidget.CoordinatorLayout" parent="Widget.Support.CoordinatorLayout">
        <item name="statusBarBackground">@android:color/transparent</item>
    </style>

    <style name="AppWidget.ProgressBar.Linear" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indeterminateAnimationType">contiguous</item>
        <item name="indicatorColor">@array/progressColors</item>
    </style>

    <style name="AppWidget.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelBehavior">floating</item>
        <item name="android:valueFrom">0.0</item>
        <item name="android:valueTo">100.0</item>
        <item name="android:stepSize">5.0</item>
    </style>

    <style name="AppWidget.Slider.ColorMix">
        <item name="android:valueTo">255.0</item>
        <item name="android:stepSize">1.0</item>
    </style>

    <style name="AppWidget.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="fabAlignmentMode">end</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="hideOnScroll">false</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomAppBar</item>
    </style>

    <style name="AppWidget.NavigationIconTinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <style name="AppWidget.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NavigationView</item>
        <item name="android:background">@drawable/app_window_background</item>
    </style>

    <style name="Base.AppWidget.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="useCompatPadding">true</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="AppWidget.FloatingActionButton" parent="Base.AppWidget.FloatingActionButton">
        <item name="backgroundTint">@color/accentAlt</item>
    </style>

    <style name="AppWidget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="AppWidget.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="AppWidget.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="AppWidget.Button.OutlinedButton.ToggleButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppWidget.Button.OutlinedButton.IconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppWidget.SearchView" parent="Widget.AppCompat.SearchView.ActionBar" />

    <style name="AppWidget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
    </style>

    <style name="AppWidget.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense" />

    <style name="AppWidget" />

    <style name="AppWidget.InfoHexColor">
        <item name="android:minWidth">30dp</item>
        <item name="android:maxWidth">30dp</item>
        <item name="android:maxLength">2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.App</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Base.AppWidget.BottomSheetModal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">auto</item>
    </style>

    <style name="AppWidget.BottomSheetModal" parent="Base.AppWidget.BottomSheetModal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheetModal</item>
    </style>

    <style name="AppWidget.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:background">@null</item>
        <item name="android:tint">?android:textColorPrimary</item>
    </style>

    <style name="AppWidget.SnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="animationMode">fade</item>
    </style>

    <style name="AppWidget.SnackBar.Button" parent="AppWidget.Button.TextButton" />

    <style name="AppWidget.SnackBar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textAppearance">@style/TextAppearance.App</item>
    </style>
</resources>
